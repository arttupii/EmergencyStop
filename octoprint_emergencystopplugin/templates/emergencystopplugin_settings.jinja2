<form class="form-horizontal">

    <div class="control-group">
        <label class="control-label">{{ _('Enable plugin') }}</label>
        <div class="controls">
          <div class="checkbox">
              <input type="checkbox" data-bind="checked: settings.plugins.emergencystopplugin.enabled">
          </div>
        </div>
    </div>

    <div class="control-group">
        <p>Commands<p>
        <label class="control-label">{{ _('PowerOff') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.emergencystopplugin.powerOffCmd">
        </div>

        <label class="control-label">{{ _('PowerOn') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.emergencystopplugin.powerOnCmd">
        </div>

        <p>octoprint.comm.protocol.gcode.received<p>
        <label class="control-label">{{ _('Shutdown regex') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.emergencystopplugin.powerOffPrinterInputRegex">
        </div>

        <p>Events<p>
        <label class="control-label">{{ _('PowerOn regex') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.emergencystopplugin.powerOnEventRegex">
        </div>
        <label class="control-label">{{ _('PowerOff regex') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.emergencystopplugin.powerOffEventRegex">
        </div>


    </div>
</form>
